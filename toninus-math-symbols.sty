%% 'Category Theory' option
	%http://katmat.math.uni-bremen.de/acc/acc.pdf
\DeclareOption{cat}{
		\providecommand{\cat}[1][C]{\mathbbm{#1}}
	%Object set
		\providecommand{\ob}{\mathit{ob}}
		\providecommand{\Obj}{\mathit{Ob}} %Back-compatibility
	%collection of arrows between two objects
		\providecommand{\mor}{hom} %Back-compatibility
		\providecommand{\hom}{\mathit{hom}}
