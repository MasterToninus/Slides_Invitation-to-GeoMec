%% https://tex.stackexchange.com/questions/14821/whats-the-proper-way-to-typeset-a-differential-operator
	\renewcommand{\d}[1]{\ensuremath{\operatorname{d}\!{#1}}}
	\providecommand{\diff}{\textrm{d}}

}

