%% 'basic' option
\DeclareOption{basic}{
	%Number fields
		\providecommand{\Real}{\mathbb{R}}
		\providecommand{\Natural}{\mathbb{N}}
		\providecommand{\Relative}{\mathbb{Z}}
		\providecommand{\Rational}{\mathbb{Q}}
		\providecommand{\Complex}{\mathbb{C}}
		\providecommand{\KField}{\mathbb{K}}

